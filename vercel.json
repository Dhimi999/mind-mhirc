{
  "redirects": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.ico"
    },
    {
      "source": "/sitemap-static.xml",
      "destination": "/sitemap-static.xml"
    },
    {
      "source": "/api/:match*",
      "destination": "/api/:match*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
